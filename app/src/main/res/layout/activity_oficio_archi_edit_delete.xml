<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_10p"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context=".ui.oficioArchi.view.OficioArchiEditDeleteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="8dp"
        app:menu="@menu/menu_oficio_archi_edit_delete"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="" />


    <RelativeLayout
        android:id="@+id/rltLytFotoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewFotoP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Ícono de oficio"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <ImageView
            android:id="@+id/imageViewIcono"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_below="@id/textViewFotoP"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_oficios" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSeleccionarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="-60dp"
            android:src="@drawable/ic_menu_camera"
            android:visibility="gone" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_10p"
        android:orientation="vertical"
        android:padding="16dp"
        android:showDividers="middle">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Nombre de oficio">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Guardar"
            android:textAllCaps="false"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>