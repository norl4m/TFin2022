<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por favor califique su experiencia con: "
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:text="Trabajador: Marcia Quishpe"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewEmployee"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@id/textViewEmployee"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_person_24" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewEmployee"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:rating="0.5"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/cardViewSendQualificationImageButton1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
                    android:backgroundTint="@color/angry_color" />

                <TextView
                    android:id="@+id/cardViewSendQualificationTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:layout_toEndOf="@id/cardViewSendQualificationImageButton1"
                    android:text="PÃ©simo"
                    android:textAllCaps="false"
                    android:textColor="@color/angry_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/cardViewSendQualificationImageButton2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_baseline_sentiment_dissatisfied_24"
                    android:backgroundTint="@color/upset_color" />

                <TextView
                    android:id="@+id/cardViewSendQualificationTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:layout_toEndOf="@id/cardViewSendQualificationImageButton2"
                    android:text="Malo"
                    android:textAllCaps="false"
                    android:textColor="@color/upset_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/cardViewSendQualificationImageButton3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_baseline_sentiment_satisfied_24"
                    android:backgroundTint="@color/upset_color" />

                <TextView
                    android:id="@+id/cardViewSendQualificationTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:layout_toEndOf="@id/cardViewSendQualificationImageButton3"
                    android:text="Regular"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/cardViewSendQualificationImageButton4"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_baseline_sentiment_satisfied_alt_24"
                    android:backgroundTint="@color/happy_color" />

                <TextView
                    android:id="@+id/cardViewSendQualificationTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:layout_toEndOf="@id/cardViewSendQualificationImageButton4"
                    android:text="Bueno"
                    android:textAllCaps="false"
                    android:textColor="@color/happy_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/cardViewSendQualificationImageButton5"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_baseline_sentiment_very_satisfied_24"
                    android:backgroundTint="@color/excited_color" />

                <TextView
                    android:id="@+id/cardViewSendQualificationTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:layout_toEndOf="@id/cardViewSendQualificationImageButton5"
                    android:text="Excelente"
                    android:textAllCaps="false"
                    android:textColor="@color/excited_color" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>