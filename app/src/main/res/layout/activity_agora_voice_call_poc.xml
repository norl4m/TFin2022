<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".communicationAgora.video.view.AgoraVideoCallActivity">

    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/bg14" />

    <TextView
        android:id="@+id/titleServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editChannelName"
        android:text="Servidor: "
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/radioGroupServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleServer"
        android:orientation="vertical"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radio_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="onRadioButtonClicked"
            android:text="Java" />

        <RadioButton
            android:id="@+id/radio_nodejs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Node.js" />
    </RadioGroup>

    <TextView
        android:id="@+id/titleCalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupServer"
        android:text="Calidad de video: "
        android:textColor="@color/white_smoke"
        android:visibility="gone" />

    <RadioGroup

        android:id="@+id/radioGroupResolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleCalidad"
        android:orientation="vertical"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radio_360p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="onRadioButtonClicked"
            android:text="SD"
            android:textColor="@color/white_smoke" />

        <RadioButton
            android:id="@+id/radio_480p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="480p"
            android:textColor="@color/white_smoke"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/radio_720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="HD" />

        <RadioButton
            android:id="@+id/radio_1080p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="1080p"
            android:visibility="gone" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/muteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/volumeSeekBar"
        android:checked="false"
        android:text="Mute"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:visibility="gone" />

    <Button
        android:id="@+id/ShareScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="shareScreen"
        android:text="Start Screen Sharing"
        android:visibility="gone" />


    <EditText
        android:id="@+id/editChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre de canal"
        android:inputType="text"
        android:text="chainsawman"
        android:visibility="gone" />


    <TextView
        android:id="@+id/networkStatus"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/networkLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/networkStatus"
        android:text="Estado de red: "
        android:textSize="12sp" />


    <FrameLayout
        android:visibility="gone"
        android:id="@+id/local_video_view_container"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/teal_100">

        <ImageView
            android:id="@+id/imageViewLocal"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/usuario"
            android:visibility="gone"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/divider_10p"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/activarAltavoz"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:onClick="onSwitchSpeakerphoneClicked"
            android:src="@drawable/btn_speaker"
            android:text="altavoz" />

        <ImageButton
            android:id="@+id/micUnmute"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:background="@drawable/mic_unmute_icon_behavior"
            android:onClick="unmuteMic"
            android:text="Activar mic"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/micMute"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:background="@drawable/mic_mute_icon_behavior"
            android:onClick="muteMic"
            android:text="Silenciar mic" />

        <ImageView
            android:id="@+id/disableCamera"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:onClick="disableCamera"
            android:src="@drawable/no_video"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/enableCamera"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:backgroundTint="@color/white"
            android:onClick="enableCamera"
            android:src="@drawable/video_camera"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/settingCalidad"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:background="@drawable/ic_video_settings"
            android:onClick="changeSettings"
            android:text="Silenciar mic"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/switchCamera"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:background="@drawable/switch_camera_icon_behavior"
            android:onClick="switchCamera"
            android:text="Silenciar mic"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/joinButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:background="@drawable/start_call_icon_behavior"
            android:onClick="joinChannel"
            android:text="Llamar" />


        <ImageButton
            android:id="@+id/leaveButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:layout_weight="0.8"
            android:background="@drawable/end_call_icon_behavior"
            android:onClick="leaveChannel"
            android:text="Colgar"
            android:visibility="gone" />

    </LinearLayout>


    <Button
        android:id="@+id/AudioMixingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupResolution"
        android:onClick="audioMixing"
        android:text="Start Audio Mixing"
        android:visibility="gone" />

    <Button
        android:id="@+id/PlayAudioEffect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AudioMixingButton"
        android:onClick="playSoundEffect"
        android:text="Play audio effect"
        android:visibility="gone" />

    <Button
        android:id="@+id/ApplyVoiceEffect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayAudioEffect"
        android:onClick="applyVoiceEffect"
        android:text="Apply voice effect"
        android:visibility="gone" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/SwitchSpeakerphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupResolution"
        android:checked="true"
        android:text="Altavoz"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linLytRemoteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_video_view_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"

        android:visibility="visible">

        <ImageView
            android:id="@+id/imageViewRemote"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/usuario" />

        <TextView
            android:id="@+id/textViewRemoteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/andika"
            android:text="Marlon Apolo"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textViewRemoteState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/andika"
            android:text="Llamando"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </LinearLayout>


</RelativeLayout>